<div class="grid">
  <div class="grid-item 1/2">
    <div class="grid grid-middle grid-pair">
      <div class="grid-item 1/2">
        <h4 class="no-margin-top">Edit point</h4>
      </div>
      <div class="grid-item 1/2">
        <%= link_to "Remove",
              point_path(@point),
              method: :delete,
              class: "block text-red margin-bottom text-right",
              data: { confirm: "This will remove: #{@point}. Are you sure?" }
        %>
      </div>
    </div>

    <%= render "form" %>
  </div>
  <div class="grid-item 1/2">
    <%= render "points/edit/map" %>
  </div>
</div>
