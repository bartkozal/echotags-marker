<%= form_for @category, html: { class: "form-stacked" } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :color %>
  <%= f.select :color, Category.colors.keys.to_a, selected: @category.color %>

  <div>
    <%= f.button "Confirm", class: "btn btn-positive" %>
  </div>
<% end %>

<%= link_to "< Back", categories_path %>
